{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"],
    "eqeqeq": "error",
    "no-await-in-loop": "error",
    "consistent-return": "error",
    "curly": "error",
    "arrow-spacing": "error",
    "no-multi-spaces": "error",
    "eol-last": "error",
    "comma-spacing": "error",
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", "tab"],
    "no-trailing-spaces": "error"
  }
}
